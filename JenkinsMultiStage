pipeline {
    agent any
    stages {
        stage('Deploy') {
            steps {
                retry(3) {
                
                    sh 'chmod +x flakey-deploy.sh'
                    sh './flakey-deploy.sh'
                }

                timeout(time: 3, unit: 'MINUTES') {
                    sh 'chmod +x flakey-deploy.sh'
                    sh './health-check.sh'
                }
            }
        }
    }
}
